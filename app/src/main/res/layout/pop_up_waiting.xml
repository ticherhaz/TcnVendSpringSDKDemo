<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_up_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_title_pop_up_waiting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_up_round_top_text"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/txt_wait"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/donut_progress_pop_up_waiting"
            android:layout_width="150dp"
            android:layout_height="150dp"
            custom:donut_finished_stroke_width="3dp"
            custom:donut_max="60"
            custom:donut_progress="60"
            custom:donut_show_text="true"
            custom:donut_suffix_text="s"
            custom:donut_text="60s"
            custom:donut_text_color="@color/colorFontGeneral"
            custom:donut_text_size="30sp"
            custom:donut_unfinished_stroke_width="3dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_cancel_pop_up_waiting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:text="@string/txt_cancel"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>