<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:foreground="@drawable/numberbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Product Number - 52"
            android:textColor="#DD0404"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_below="@+id/textView"
            android:id="@+id/imageView25"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#fff"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/dew" />

        <TextView
            android:layout_toRightOf="@+id/imageView25"
            android:layout_below="@+id/textView"
            android:id="@+id/textView38"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:paddingStart="5dp"
            android:text="Mountain Dew 100 Plus local made drink"
            android:textColor="#000"
            android:textSize="21sp" />

        <ProgressBar
            android:layout_centerVertical="true"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="24dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/btnselectordone"
            app:tint="#8BC34A" />
    </RelativeLayout>

</LinearLayout>