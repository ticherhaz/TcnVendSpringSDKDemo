<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="TransparentActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>


    <style name="Theme1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>


    <style name="scrollbar_shape_style">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/scroll_thumb</item>
        <item name="android:scrollbarSize">25dp</item>
        <item name="android:scrollbarFadeDuration">2000</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">1000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeColor">#6200EE</item>
    </style>


    <style name="BlackTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="BlackEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLength">20</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="GreenButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_background_rounded_green</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RedButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_background_rounded_red</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_background_rounded_primary</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryButtonOutlineStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_outline_rounded_primary</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ui_base_Dialog_bocop">
        <item name="android:windowBackground">@color/ui_base_bocop_dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowIsFloating">true
        </item><!--是否浮现在activity之上 Whether to appear on the activity-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊 blurry-->
    </style>

    <style name="background_lrmargin">
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginRight">80dp</item>
    </style>

    <!-- edit控件离屏幕两边距离+距离上个控件距离Edit control distance from both sides of the screen + distance from the previous control -->
    <style name="background_lrmarginson" parent="background_lrmargin">
        <item name="android:layout_marginTop">40px</item>
    </style>

    <!-- edit控件离屏幕两边距离+距离上个控件距离 Edit control distance from both sides of the screen + distance from the previous control-->
    <style name="background_lrmarginss" parent="background_lrmargin">
        <item name="android:layout_marginTop">10px</item>
    </style>

    <!--按钮 控件离屏幕两边距离+距离上个控件距离 Button Control distance from both sides of the screen + distance from previous control-->
    <style name="background_lrmarginson1" parent="background_lrmargin">
        <item name="android:layout_marginTop">80px</item>
    </style>

    <!-- 控件离屏幕两边距离 The distance of the controls from both sides of the screen-->
    <style name="lrmargin">
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginRight">80dp</item>
    </style>

    <!-- edit控件离屏幕两边距离+距离上个控件距离 Edit control distance from both sides of the screen + distance from the previous control-->
    <style name="lrmarginss" parent="lrmargin">
        <item name="android:layout_marginTop">10px</item>
    </style>

    <style name="background_menubutton_20">
        <item name="android:textColor">@color/background_text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ui_base_aisle_edittext">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/ui_base_circlebuttonstyle</item>
        <item name="android:padding">5px</item>
        <item name="android:textColorHint">@color/ui_base_text_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">10px</item>
    </style>
    <!-- 单个菜单中的textview文本设置 Textview text settings in a single menu-->
    <style name="ui_base_aisle_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ui_base_text_color_black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">right</item>
    </style>
    <!-- 菜单按钮字体 Menu button font-->
    <style name="ui_base_menubutton">
        <item name="android:textColor">@color/ui_base_text_color</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- 菜单上方字体 Font above menu-->
    <style name="ui_base_menutop">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/ui_base_text_color</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">30sp</item>
    </style>
</resources>